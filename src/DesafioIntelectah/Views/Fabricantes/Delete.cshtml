@model DesafioIntelectah.Models.Fabricante

@{
	ViewBag.Title = "Excluir Fabricante";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja excluir este fabricante?</h3>
<div class="form-horizontal">
	<hr />
	<dl class="dl-horizontal">
		<dt>@Html.DisplayNameFor(m => m.Nome)</dt>
		<dd>@Html.DisplayFor(m => m.Nome)</dd>

		<dt>@Html.DisplayNameFor(m => m.PaisOrigem)</dt>
		<dd>@Html.DisplayFor(m => m.PaisOrigem)</dd>

		<dt>@Html.DisplayNameFor(m => m.AnoFundacao)</dt>
		<dd>@Html.DisplayFor(m => m.AnoFundacao)</dd>

		<dt>@Html.DisplayNameFor(m => m.Website)</dt>
		<dd>@Html.DisplayFor(m => m.Website)</dd>
	</dl>
</div>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<input type="hidden" name="id" value="@Model.FabricanteID" />
	<div class="form-group">
		<input type="submit" value="Excluir" class="btn btn-danger" />
		<a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
	</div>
}
