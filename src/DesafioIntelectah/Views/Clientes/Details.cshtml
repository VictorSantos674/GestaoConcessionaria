@model DesafioIntelectah.Models.Cliente

@{
    ViewBag.Title = "Detalhes do Cliente";
}

<h2>@ViewBag.Title</h2>

<div class="form-horizontal">
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Nome)</dt>
        <dd>@Html.DisplayFor(m => m.Nome)</dd>

        <dt>@Html.DisplayNameFor(m => m.CPF)</dt>
        <dd>@Html.DisplayFor(m => m.CPF)</dd>

        <dt>@Html.DisplayNameFor(m => m.Telefone)</dt>
        <dd>@Html.DisplayFor(m => m.Telefone)</dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("Edit", new { id = Model.ClienteID })" class="btn btn-primary">Editar</a>
    <a href="@Url.Action("Index")" class="btn btn-default">Voltar</a>
</div>
