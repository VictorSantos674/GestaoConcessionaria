@model DesafioIntelectah.Models.Cliente

@{
    ViewBag.Title = "Excluir Cliente";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja excluir este cliente?</h3>
<div class="form-horizontal">
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Nome)</dt>
        <dd>@Html.DisplayFor(m => m.Nome)</dd>

        <dt>@Html.DisplayNameFor(m => m.CPF)</dt>
        <dd>@Html.DisplayFor(m => m.CPF)</dd>

        <dt>@Html.DisplayNameFor(m => m.Telefone)</dt>
        <dd>@Html.DisplayFor(m => m.Telefone)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.ClienteID" />
    <div class="form-group">
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
    </div>
}
